<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Session Authentication</title>
    <!-- Bootstrap CSS for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow">
                    <div class="card-body">
                        <h1 class="card-title text-center mb-4">Login</h1>
                        
                        <!-- Error Message Display -->
                        <!-- EJS syntax: <% %> for logic, <%= %> for output -->
                        <% if (typeof error !== 'undefined' && error) { %>
                            <div class="alert alert-danger" role="alert">
                                <%= error %>
                            </div>
                        <% } %>
                        
                        <!-- Login Form -->
                        <!-- action="/auth/login" matches the POST route in routes/auth.js -->
                        <!-- method="POST" sends form data via HTTP POST request -->
                        <form action="/auth/login" method="POST">
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <!-- name="username" - this value will be in req.body.username -->
                                <input type="text" class="form-control" id="username" name="username" required>
                            </div>
                            <div class="mb-3">
                                <label for="password" class="form-label">Password</label>
                                <!-- type="password" hides the input for security -->
                                <!-- name="password" - this value will be in req.body.password -->
                                <input type="password" class="form-control" id="password" name="password" required>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Login</button>
                            </div>
                        </form>
                        
                        <!-- Demo Credentials Info -->
                        <div class="mt-3">
                            <small class="text-muted">
                                <strong>Demo Credentials:</strong><br>
                                Username: admin, Password: password<br>
                                Username: user, Password: user123
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS for interactive components -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
