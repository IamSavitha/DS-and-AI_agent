# MongoDB Connection String
# Format: mongodb://[username:password@]host[:port][/database]
# For local MongoDB: mongodb://localhost:27017/your_database_name
# For MongoDB Atlas: mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/database_name
MONGODB_URI=mongodb://localhost:27017/hw7_auth_db

# JWT Secret Key
# IMPORTANT: Use a strong, random secret in production!
# Generate one using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Replace the placeholder below with your generated secret
JWT_SECRET=REPLACE_WITH_YOUR_GENERATED_SECRET_KEY

# JWT Token Expiration Time
# Format: number followed by time unit (s=seconds, m=minutes, h=hours, d=days)
# Examples: "1h", "24h", "7d", "3600s"
TOKEN_EXPIRY=24h

# Server Port
PORT=3000

# Node Environment
NODE_ENV=development
